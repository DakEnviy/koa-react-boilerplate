{
  "name": "react-starterkit",
  "version": "1.1.0",
  "description": "React starterkit with Koa",
  "author": "Alberto Gasparin",
  "keywords": [
    "react",
    "koa",
    "starter kit",
    "redux",
    "router"
  ],
  "private": true,
  "config": {
    "testfiles": "find . -name *.spec.js ! -path */node_modules/*",
    "mochaargs": "--harmony --compilers js:babel-polyfill,js:babel-register --require ./lib/react-compat",
    "nyc": {
      "require": [
        "babel-polyfill",
        "babel-register",
        "./lib/react-compat"
      ],
      "exclude": [
        "app/client.js",
        "lib/webpack.js",
        "lib/static-builder.js",
        "**/__tests__/**"
      ],
      "include": [
        "api",
        "app",
        "lib"
      ]
    }
  },
  "scripts": {
    "start": "node --harmony ./server.js",
    "prebuild": "npm run clean -s && npm run lint -s",
    "build": "NODE_ENV=production webpack -p --progress --colors --display-error-details --display-modules --sort-modules-by name",
    "build:template": "NODE_ENV=production node --harmony ./lib/static-builder",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs",
    "test:watch": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs --watch --watch-extensions jsx,json --reporter min",
    "coverage": "NODE_ENV=test nyc --all --reporter=lcov --reporter=text mocha $npm_package_config_mochaargs $($npm_package_config_testfiles)",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore .",
    "clean": "rm -rf ./public/assets && rm -rf ./coverage && rm -rf ./.nyc_output",
    "prewatch": "npm run clean -s",
    "watch": "supervisor -q -w lib,api,webpack.config.js -i __tests__ --harmony ./server.js"
  },
  "dependencies": {
    "autoprefixer": "^6.3.0",
    "babel-core": "^6.7.0",
    "babel-loader": "^6.2.0",
    "babel-plugin-lodash": "^2.2.1",
    "babel-polyfill": "^6.7.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.0",
    "css-loader": "~0.23.0",
    "dotenv": "~2.0.0",
    "es6-promise": "^3.0.0",
    "exports-loader": "^0.6.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.0",
    "image-webpack-loader": "^1.6.2",
    "imports-loader": "~0.6.5",
    "koa": "^1.2.0",
    "koa-bodyparser": "^2.0.0",
    "koa-compress": "^1.0.0",
    "koa-error": "^1.1.0",
    "koa-generic-session": "^1.9.0",
    "koa-jade": "^2.1.0",
    "koa-logger": "~1.3.0",
    "koa-router": "^5.4.0",
    "koa-static-cache": "^3.1.0",
    "lodash": "^4.1.0",
    "node-sass": "^3.4.0",
    "postcss-loader": "^0.8.0",
    "react": "~0.14.7",
    "react-dom": "~0.14.7",
    "react-redux": "~4.4.0",
    "react-router": "~2.0.1",
    "redux": "~3.3.0",
    "redux-thunk": "~2.0.0",
    "require-hacker": "~2.1.3",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.0",
    "webpack": "^1.12.10",
    "whatwg-fetch": "~0.11.0"
  },
  "devDependencies": {
    "babel-eslint": "6.0.0-beta.6",
    "babel-plugin-react-transform": "^2.0.2",
    "chai": "^3.5.0",
    "deep-freeze": "~0.0.1",
    "enzyme": "^2.1.0",
    "eslint": "^2.4.0",
    "eslint-plugin-react": "^4.2.2",
    "mocha": "^2.4.0",
    "nyc": "^5.6.0",
    "react-addons-test-utils": "~0.14.7",
    "react-transform-hmr": "^1.0.4",
    "sinon": "^1.17.0",
    "supertest": "^1.1.0",
    "supervisor": "^0.9.0",
    "webpack-dev-middleware": "~1.5.0",
    "webpack-hot-middleware": "~2.10.0"
  },
  "engines": {
    "node": ">= 0.12.0"
  }
}
