{
  "name": "react-starterkit",
  "version": "1.0.0",
  "description": "React starterkit with Koa",
  "author": "Alberto Gasparin",
  "keywords": [],
  "private": true,
  "config": {
    "jade": "./node_modules/koa-jade/node_modules/.bin/jade",
    "mochaargs": "--compilers js:babel-polyfill,js:babel-register"
  },
  "scripts": {
    "start": "node --harmony ./server.js",
    "start:watch": "supervisor -q -t -i public,node_modules -e js,jsx --harmony ./server.js",
    "prebuild": "npm run clean -s",
    "build": "NODE_ENV=production webpack -p --progress --colors --display-error-details --display-modules --sort-modules-by name",
    "build:watch": "webpack --colors --display-error-details && webpack-dev-server --config webpack.config.js",
    "build:template": "$npm_package_config_jade views/index.jade -o ./public -O '{env:\"production\"}'",
    "pretest": "npm run lint -s",
    "test": "mocha $(find . -name '*.spec.js' ! -path '*/node_modules/*') $npm_package_config_mochaargs",
    "test:watch": "mocha $(find . -name '*.spec.js' ! -path '*/node_modules/*') $npm_package_config_mochaargs --watch --watch-extensions jsx --reporter min",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore .",
    "clean": "rm -rf ./public/assets",
    "prewatch": "npm run clean -s",
    "watch": "concurrent \"npm run build:watch -s\" \"npm run start:watch -s\""
  },
  "dependencies": {
    "autoprefixer-loader": "^3.0.0",
    "babel-core": "^6.3.15",
    "babel-loader": "^6.1.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "babel-register": "^6.3.13",
    "css-loader": "^0.23.0",
    "dotenv": "^1.2.0",
    "es6-promise": "^3.0.2",
    "exports-loader": "^0.6.2",
    "extract-text-webpack-plugin": "^0.9.0",
    "file-loader": "^0.8.0",
    "history": "^1.15.0",
    "image-webpack-loader": "^1.6.2",
    "imports-loader": "^0.6.5",
    "koa": "^1.1.0",
    "koa-bodyparser": "^2.0.0",
    "koa-compress": "^1.0.0",
    "koa-error": "^1.1.0",
    "koa-generic-session": "^1.9.0",
    "koa-jade": "^2.0.0",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.1.0",
    "koa-static-cache": "^3.1.0",
    "lodash": "^3.10.0",
    "moment": "^2.10.0",
    "node-sass": "^3.4.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-router": "^1.0.1",
    "sass-loader": "^3.1.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.0",
    "webpack": "^1.12.0",
    "whatwg-fetch": "^0.10.0"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "chai": "^3.4.0",
    "concurrently": "^1.0.0",
    "enzyme": "^1.1.0",
    "eslint": "^1.10.3",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.11.3",
    "mocha": "^2.3.4",
    "react-addons-test-utils": "^0.14.0",
    "react-hot-loader": "^1.2.0",
    "sinon": "^1.17.0",
    "source-map-loader": "^0.1.0",
    "supervisor": "^0.9.1",
    "webpack-dev-server": "^1.14.0"
  },
  "engines": {
    "node": ">= 0.12.0"
  }
}
