{
  "name": "react-starterkit",
  "version": "2.1.0",
  "description": "React starterkit with Koa",
  "author": "Alberto Gasparin",
  "keywords": [
    "react",
    "koa",
    "starter kit",
    "redux",
    "router"
  ],
  "private": true,
  "config": {
    "testfiles": "find . -name *.spec.js ! -path */node_modules/*",
    "mochaargs": "--compilers js:babel-polyfill,js:babel-register --require ./lib/react-compat"
  },
  "scripts": {
    "start": "node ./server.js",
    "prebuild": "npm run clean -s && npm run lint -s",
    "build": "NODE_ENV=production webpack -p --progress --colors --display-error-details --display-modules --sort-modules-by name",
    "build:template": "NODE_ENV=production node ./lib/static-builder",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs",
    "test:watch": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs --watch --watch-extensions jsx,json --reporter min",
    "coverage": "NODE_ENV=test nyc -i babel-polyfill -i babel-register -i ./lib/react-compat --all mocha $npm_package_config_mochaargs $($npm_package_config_testfiles)",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore . && stylelint --syntax scss \"app/**/*.scss\"",
    "clean": "rm -rf ./public/assets && rm -rf ./coverage && rm -rf ./.nyc_output",
    "prewatch": "npm run clean -s",
    "watch": "supervisor --debug -q -w lib,api,webpack.config.js -i __tests__ ./server.js"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "app/client.js",
      "lib/webpack.js",
      "lib/static-builder.js",
      "**/__tests__/**"
    ],
    "include": [
      "api",
      "app",
      "lib"
    ]
  },
  "dependencies": {
    "autoprefixer": "^6.3.0",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.0",
    "babel-plugin-lodash": "^3.1.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.0",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0",
    "css-loader": "~0.23.0",
    "dotenv": "~2.0.0",
    "es6-promise": "^3.0.0",
    "exports-loader": "^0.6.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.0",
    "image-webpack-loader": "^1.8.0",
    "imports-loader": "~0.6.5",
    "jade": "^1.11.0",
    "koa": "^1.2.0",
    "koa-better-body": "^2.0.0",
    "koa-compress": "^1.0.0",
    "koa-error": "^2.1.0",
    "koa-jade": "^2.1.0",
    "koa-logger": "~1.3.0",
    "koa-router": "^5.4.0",
    "koa-static-cache": "^3.1.0",
    "lodash": "^4.1.0",
    "node-sass": "^3.6.0",
    "postcss-loader": "^0.9.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "~4.4.0",
    "react-router": "~2.4.0",
    "redux": "~3.5.0",
    "redux-thunk": "~2.1.0",
    "require-hacker": "~2.1.3",
    "sass-loader": "^3.2.0",
    "style-loader": "~0.13.1",
    "url-loader": "^0.5.0",
    "webpack": "^1.13.0",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel-plugin-react-transform": "^2.0.2",
    "chai": "^3.5.0",
    "enzyme": "^2.2.0",
    "eslint": "^2.5.0",
    "eslint-plugin-react": "^5.0.0",
    "mocha": "^2.5.0",
    "nyc": "^6.4.0",
    "react-addons-test-utils": "^15.1.0",
    "react-transform-hmr": "~1.0.4",
    "redux-immutable-state-invariant": "~1.2.0",
    "sinon": "^1.17.0",
    "stylelint": "^6.2.0",
    "supertest": "^1.1.0",
    "supervisor": "^0.10.0",
    "webpack-dev-middleware": "~1.6.1",
    "webpack-hot-middleware": "~2.10.0"
  },
  "engines": {
    "node": ">= 4.0.0"
  }
}
