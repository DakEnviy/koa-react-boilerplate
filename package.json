{
  "name": "react-starterkit",
  "version": "3.1.0",
  "description": "React starterkit with Koa",
  "author": "Alberto Gasparin",
  "keywords": [
    "react",
    "koa",
    "starter kit",
    "redux",
    "router"
  ],
  "private": true,
  "config": {
    "testfiles": "find . -name unit*.js -not -path */node_modules/*",
    "mochaargs": "--compilers js:babel-polyfill,js:babel-register --require ./lib/react-compat --require ./tests/helpers/unit.boot"
  },
  "scripts": {
    "start": "node ./server.js",
    "prebuild": "npm run clean -s && npm run test -s",
    "build": "npm run build:assets -s && npm run build:template",
    "build:assets": "NODE_ENV=production webpack -p --progress --colors --display-error-details --display-modules --sort-modules-by name",
    "build:template": "NODE_ENV=production node ./lib/static-builder",
    "pretest": "npm run lint -s",
    "test": "npm run test:unit -s",
    "test:unit": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs",
    "test:unit:watch": "npm run test:unit -- --watch --watch-extensions jsx,json --reporter min",
    "coverage": "NODE_ENV=test nyc mocha $npm_package_config_mochaargs --reporter dot $($npm_package_config_testfiles)",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore . && stylelint --syntax scss \"app/**/*.scss\"",
    "clean": "rm -rf ./public/assets && rm -rf ./coverage && rm -rf ./.nyc_output",
    "prewatch": "npm run clean -s",
    "watch": "supervisor --debug -q -w lib,api,templates,webpack.config.js -e js,marko -i __tests__ ./server.js"
  },
  "nyc": {
    "require": [
      "babel-polyfill",
      "babel-register",
      "./lib/react-compat"
    ],
    "exclude": [
      "webpack.config.js",
      "tests",
      "**/__tests__/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "autoprefixer": "^6.3.0",
    "babel-core": "^6.11.0",
    "babel-loader": "^6.2.0",
    "babel-plugin-lodash": "^3.2.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.0",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-react": "^6.11.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.11.0",
    "co": "^4.4.0",
    "css-loader": "~0.23.0",
    "dotenv": "~2.0.0",
    "es6-promise": "^3.0.0",
    "exports-loader": "^0.6.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^2.0.0",
    "imports-loader": "~0.6.5",
    "koa": "^1.2.0",
    "koa-better-body": "^2.0.0",
    "koa-compress": "^1.0.0",
    "koa-logger": "~1.3.0",
    "koa-onerror": "^2.0.0",
    "koa-router": "^5.4.0",
    "koa-static-cache": "^3.1.0",
    "lodash": "^4.1.0",
    "lodash-webpack-plugin": "^0.9.0",
    "marko": "^3.8.0",
    "node-sass": "^3.8.0",
    "postcss-loader": "^0.9.0",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-redux": "~4.4.0",
    "react-router": "~2.6.0",
    "redux": "~3.5.0",
    "redux-actions": "^0.10.0",
    "redux-thunk": "~2.1.0",
    "require-hacker": "~2.1.4",
    "sass-loader": "^3.2.0",
    "style-loader": "~0.13.1",
    "svg-sprite-loader": "0.0.26",
    "url-loader": "^0.5.0",
    "webpack": "^1.13.0",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "~1.0.3",
    "babel-plugin-react-transform": "^2.0.2",
    "chai": "^3.5.0",
    "enzyme": "^2.4.0",
    "eslint": "^3.0.0",
    "eslint-plugin-react": "^5.2.0",
    "mocha": "^2.5.0",
    "nyc": "~7.1.0",
    "react-addons-test-utils": "^15.2.0",
    "react-transform-hmr": "~1.0.4",
    "redux-immutable-state-invariant": "~1.2.0",
    "stylelint": "^7.0.0",
    "supertest": "^1.1.0",
    "supervisor": "^0.11.0",
    "webpack-dev-middleware": "~1.6.1",
    "webpack-hot-middleware": "~2.12.0"
  },
  "engines": {
    "node": ">= 4.0.0"
  }
}
