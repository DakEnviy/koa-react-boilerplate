{
  "name": "react-starterkit",
  "version": "1.1.0",
  "description": "React starterkit with Koa",
  "author": "Alberto Gasparin",
  "keywords": ["react", "koa", "starter kit", "redux", "router"],
  "private": true,
  "config": {
    "testfiles": "find . -name *.spec.js ! -path */node_modules/*",
    "mochaargs": "--harmony --compilers js:babel-polyfill,js:babel-register --require ./lib/react-compat"
  },
  "scripts": {
    "start": "node --harmony ./server.js",
    "prebuild": "npm run clean -s && npm run lint -s",
    "build": "NODE_ENV=production webpack -p --progress --colors --display-error-details --display-modules --sort-modules-by name",
    "build:template": "NODE_ENV=production babel-node --harmony ./lib/static-builder",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs",
    "test:watch": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs --watch --watch-extensions jsx,json --reporter min",
    "coverage": "NODE_ENV=test babel-node --harmony $(npm bin)/isparta cover _mocha -- $npm_package_config_mochaargs $($npm_package_config_testfiles)",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore .",
    "clean": "rm -rf ./public/assets",
    "prewatch": "npm run clean -s",
    "watch": "supervisor -q -w lib,api,webpack.config.js -i __tests__ --harmony ./server.js"
  },
  "dependencies": {
    "autoprefixer-loader": "^3.0.0",
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "babel-register": "^6.3.13",
    "css-loader": "~0.23.0",
    "dotenv": "^1.2.0",
    "es6-promise": "^3.0.2",
    "exports-loader": "^0.6.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.0",
    "history": "~1.17.0",
    "image-webpack-loader": "^1.6.2",
    "imports-loader": "^0.6.5",
    "koa": "^1.1.0",
    "koa-bodyparser": "^2.0.0",
    "koa-compress": "^1.0.0",
    "koa-error": "^1.1.0",
    "koa-generic-session": "^1.9.0",
    "koa-jade": "^2.1.0",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.1.0",
    "koa-static-cache": "^3.1.4",
    "lodash": "^3.10.0",
    "node-sass": "^3.4.0",
    "react": "~0.14.6",
    "react-dom": "~0.14.6",
    "react-redux": "~4.0.6",
    "react-router": "~1.0.3",
    "redux": "~3.0.5",
    "redux-simple-router": "~1.0.2",
    "redux-thunk": "~1.0.3",
    "require-hacker": "^2.1.3",
    "sass-loader": "^3.1.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.0",
    "webpack": "^1.12.10",
    "whatwg-fetch": "^0.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "chai": "^3.4.0",
    "deep-freeze": "0.0.1",
    "enzyme": "^1.2.0",
    "eslint": "^1.10.3",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.14.0",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4",
    "react-addons-test-utils": "~0.14.6",
    "react-transform-catch-errors": "^1.0.1",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.2.0",
    "sinon": "^1.17.0",
    "supertest": "^1.1.0",
    "supervisor": "^0.9.1",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "engines": {
    "node": ">= 0.12.0"
  }
}
